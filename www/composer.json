{
  "config": {
    "secure-http": false
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.6",
    "phpseclib/phpseclib": "2.0.*",
    "johnpbloch/wordpress": "4.8.*",
    "wpackagist-plugin/disable-xml-rpc-pingback": "*",
    "wpackagist-plugin/wordfence": "*",
    "wpackagist-plugin/sendgrid-email-delivery-simplified": "1.10.*",
    "wpackagist-plugin/amazon-web-services": "1.0.*",
    "wpackagist-plugin/amazon-s3-and-cloudfront": "1.2.*"
  },
  "extra": {
    "wordpress-install-dir": "public/core",
    "installer-paths": {
      "public/wp-content/mu-plugins/{$name}/": ["type:worpdress-muplugin"],
      "public/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}